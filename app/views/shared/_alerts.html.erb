<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Alex Fenton Portfolio", sticky: false, time: 700) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "Alex Fenton Portfolio", sticky: false, time: 700) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: "Alex Fenton Portfolio", sticky: false, time: 700) %>
<% end %>